fetch("/data/vacunas.json")
  .then(r => r.json())
  .then(data => {
    const ficha = data.find(v =>
      v.especie === especie && (v.raza === raza || v.raza === "general")
    );

    if (!ficha) {
      const p = document.createElement("p");
