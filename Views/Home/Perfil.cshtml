@using Zooni.Models
@{
    ViewData["Title"] = "Perfil - Zooni 👤";
    Layout = null;
    var mascotas = ViewBag.Mascotas as List<Mascota> ?? new List<Mascota>();
}

<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
<title>@ViewData["Title"]</title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
<style>
:root {
  --verde:#39b77c;
  --amarillo:#FFD85A;
  --marron:#3c2a1b;
  --fondo:#f9f9f8;
  --rojo:#ff6b6b;
  --crema:#fffaf4;
}
html, body {
  margin: 0; padding: 0;
  width: 100%; height: 100%;
  background: var(--fondo) url('/img/fondos/consultorio.jpg') center/cover fixed no-repeat;
  font-family: 'Poppins', sans-serif;
  color: var(--marron);
  display: flex; flex-direction: column; align-items: center;
  overflow-x: hidden;
}
header { position: fixed; top: 15px; left: 20px; z-index: 10; }
.menu-icon { width: 38px; cursor: pointer; transition: transform .25s ease; }
.menu-icon:hover { transform: scale(1.1); }

.menu-lateral {
  position: fixed;
  top: 0; left: 0;
  transform: translateX(-100%);
  width: 240px; height: 100%;
  background: rgba(255,255,255,0.97);
  backdrop-filter: blur(16px);
  box-shadow: 4px 0 18px rgba(0,0,0,0.15);
  display: flex; flex-direction: column;
  padding: 2.5rem 1.2rem;
  gap: 1rem;
  transition: transform 0.35s ease;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
  z-index: 9999;
}
.menu-lateral.abierto { transform: translateX(0); }
.menu-lateral a {
  text-decoration: none;
  font-weight: 600;
  color: var(--marron);
  font-size: 1.1rem;
  padding: 0.6rem 0.8rem;
  border-radius: 12px;
  transition: all .25s ease;
}
.menu-lateral a:hover {
  background: var(--amarillo);
  color: #3c2a00;
}
.cerrar-menu {
  align-self: flex-end;
  font-size: 1.6rem;
  cursor: pointer;
  color: var(--marron);
  margin-bottom: 1.2rem;
}
.overlay {
  position: fixed; top:0; left:0;
  width:100%; height:100%;
  background:rgba(0,0,0,0.25);
  opacity:0; pointer-events:none;
  transition:opacity .3s ease;
  z-index: 8;
}
.overlay.activo { opacity:1; pointer-events:auto; }

main {
  margin-top: 90px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60px;
}

section {
  background: rgba(255,255,255,0.95);
  border-radius: 28px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.12);
  width: 90%;
  max-width: 430px;
  padding: 1.8rem 1.5rem;
  margin-bottom: 25px;
  backdrop-filter: blur(10px);
}

h1 {
  text-align:center;
  margin-top:20px;
  font-size:1.9rem;
  font-weight:700;
}
h2 { font-size:1.25rem; margin-bottom:14px; font-weight:600; }

.avatar-usuario {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}
.avatar-usuario img {
  width:130px; height:130px;
  border-radius:50%;
  border:4px solid var(--verde);
  object-fit:cover;
  margin-bottom:10px;
  background:white;
}
.nombre { font-size:1.3rem; font-weight:600; }
.pais { color:var(--marron); font-weight:500; margin-bottom:6px; }
.descripcion {
  text-align:center;
  font-size:0.95rem;
  color:#555;
  margin-bottom:16px;
}

.mascotas-grid {
  display:flex; flex-wrap:wrap;
  justify-content:center;
  gap:15px;
  margin-top:10px;
}
.mascota {
  background:var(--crema);
  border-radius:16px;
  padding:10px;
  width:95px;
  text-align:center;
  cursor:pointer;
  transition:.25s;
  box-shadow:0 3px 8px rgba(0,0,0,0.08);
}
.mascota:hover { transform:scale(1.05); background:var(--amarillo); }
.mascota img {
  width:70px; height:70px;
  border-radius:50%;
  object-fit:cover;
  background:white;
}
.selector {
  margin-top:20px;
  background:var(--verde);
  color:white;
  font-weight:600;
  padding:10px 14px;
  border:none;
  border-radius:12px;
  cursor:pointer;
  transition:.25s;
  width:100%;
}
.selector:hover { background:#2fa76b; transform:translateY(-2px); }

@@media (max-width:480px){
  section { padding:1.2rem; }
  .avatar-usuario img { width:100px; height:100px; }
}
</style>
</head>

<body>
<header>
  <img src="/img/icons/hamburger.png" alt="Menú" class="menu-icon" id="abrirMenu" />
</header>

<div class="menu-lateral" id="menuLateral">
    <div class="cerrar-menu" id="cerrarMenu">✖</div>
    <a href="/Home/Index">🏠 Inicio</a>
    <a href="/Comunidad">👥 Comunidad</a>
    <a href="/Marketplace">🛒 Marketplace</a>
    <a href="/home/FichaMedica">💉 Ficha médica</a>
    <a href="/home/calendario">📅 Calendario</a>
    <a href="/Chat/ChatZooni">💬 ChatBot</a>
    <a href="/Closet">👕 Closet</a>
    <a href="/Home/Perfil">👤 Perfil</a>
    <a href="/Home/configuracion">⚙️ Configuración</a>
    <a href="/Auth/Logout" style="color:red;">🚪 Cerrar sesión</a>
</div>
<div class="overlay" id="overlay"></div>

<main>
  <h1>Mi Perfil 👤</h1>

  <section>
    <div class="avatar-usuario">
      <img src="@ViewBag.FotoPerfil" alt="Avatar de perfil" />
      <div class="nombre">@ViewBag.Nombre</div>
      <div class="pais">🌎 @ViewBag.Pais</div>
      <div class="descripcion">@ViewBag.Descripcion</div>
    </div>

    <h2>🐾 Mis Mascotas</h2>
    <div class="mascotas-grid">
      @foreach (var m in mascotas)
      {
          <div class="mascota" onclick="seleccionarMascota('@m.Id_Mascota')">
              <img src="@m.Foto" alt="@m.Nombre" />
              <p>@m.Nombre</p>
          </div>
      }
    </div>

    <button class="selector" onclick="abrirPersonalizador()">🎨 Personalizar Perfil</button>
  </section>
</main>

<script>
const menu=document.getElementById("menuLateral"),overlay=document.getElementById("overlay");
document.getElementById("abrirMenu").onclick=()=>{menu.classList.add("abierto");overlay.classList.add("activo");};
document.getElementById("cerrarMenu").onclick=cerrarMenu;overlay.onclick=cerrarMenu;
function cerrarMenu(){menu.classList.remove("abierto");overlay.classList.remove("activo");}

function seleccionarMascota(id){
    fetch(`/Home/CambiarMascota?MascotaId=${id}`,{method:'POST'}).then(()=>location.reload());
}
function abrirPersonalizador(){
    alert("✨ Próximamente: editor de avatar, accesorios y fondos personalizados 🐶");
}
</script>
</body>
</html>
