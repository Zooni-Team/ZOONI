// üêæ Polling para actualizaciones en tiempo real de mascotas compartidas
let ultimaActualizacion = new Date().toISOString();
let intervaloActualizacion = null;

function iniciarPolling() {
    // Obtener el ID de la mascota actual desde ViewBag
    const mascotaId = @(ViewBag.MascotaId ?? -1);
    if (mascotaId <= 0) return;
    
    // Polling cada 5 segundos para verificar actualizaciones
    intervaloActualizacion = setInterval(() => {
        fetch(`/Home/VerificarActualizacionMascota?idMascota=${mascotaId}`)
            .then(response => response.json())
            .then(data => {
                if (data.success && data.mascota) {
                    const mascota = data.mascota;
                    
                    // Actualizar peso si cambi√≥
                    if (mascota.pesoDisplay) {
                        const pesoDisplayEl = document.getElementById("pesoDisplay");
                        if (pesoDisplayEl) {
                            pesoDisplayEl.textContent = mascota.pesoDisplay;
                        }
                    }
                    
                    // Actualizar edad si cambi√≥
                    if (mascota.edad) {
                        const edadMeses = parseInt(mascota.edad);
                        const a√±os = Math.floor(edadMeses / 12);
                        const meses = edadMeses % 12;
                        let edadTexto = "";
                        if (a√±os > 0) {
                            edadTexto += a√±os + " a√±o" + (a√±os > 1 ? "s" : "");
                        }
                        if (meses > 0) {
                            if (a√±os > 0) edadTexto += " y ";
                            edadTexto += meses + " mes" + (meses > 1 ? "es" : "");
                        }
                        if (edadTexto === "") edadTexto = "0 meses";
                        
                        const edadDisplayEl = document.getElementById("edadDisplay");
                        if (edadDisplayEl) {
                            edadDisplayEl.textContent = edadTexto;
                        }
                    }
                    
                    // Actualizar fecha de nacimiento si existe
                    if (mascota.fechaNacimiento) {
                        const fechaInput = document.getElementById("fechaNacimientoInput");
                        if (fechaInput) {
                            fechaInput.value = mascota.fechaNacimiento;
                        }
                    }
                }
            })
            .catch(error => {
                console.error("Error en polling:", error);
            });
    }, 5000); // Cada 5 segundos
}

// Iniciar polling cuando se carga la p√°gina
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', iniciarPolling);
} else {
    iniciarPolling();
}

// Detener polling cuando se sale de la p√°gina
window.addEventListener('beforeunload', () => {
    if (intervaloActualizacion) {
        clearInterval(intervaloActualizacion);
    }
});
