fetch("/data/consejos.json")
.then(r => r.json())
.then(data => {
    const div = document.getElementById("listaConsejos");
    const filtrados = data.filter(c =>
        (c.especie === especie || c.especie === "general") &&
        (c.raza === raza || c.raza === "general") &&
        edad >= c.edadMin && edad <= c.edadMax &&
        peso >= c.pesoMin && peso <= c.pesoMax
