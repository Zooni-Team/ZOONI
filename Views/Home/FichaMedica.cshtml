// Funciones para editar peso
function editarPeso() {
    document.getElementById("pesoEditForm").style.display = "block";
    document.getElementById("pesoInput").focus();
}

function cancelarEditarPeso() {
    document.getElementById("pesoEditForm").style.display = "none";
}

function guardarPeso() {
    const pesoInput = document.getElementById("pesoInput").value;
    if (!pesoInput || isNaN(pesoInput.replace(",", "."))) {
        alert("Por favor, ingres√° un peso v√°lido.");
        return;
    }

    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || "";
    const formData = new FormData();
    formData.append("peso", pesoInput);
    formData.append("__RequestVerificationToken", token);

    fetch("/Home/ActualizarPesoMascota", {
        method: "POST",
        body: formData
    })
    .then(response => {
        if (response.ok) {
            location.reload();
        } else {
            alert("Error al actualizar el peso. Por favor, intent√° de nuevo.");
        }
    })
    .catch(error => {
        console.error("Error:", error);
        alert("Error al actualizar el peso. Por favor, intent√° de nuevo.");
    });
}

