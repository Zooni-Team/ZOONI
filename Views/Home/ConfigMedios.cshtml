<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
<style>
:root {
    --verde: #3ac37d;
    --amarillo: #FFD85A;
    --marron: #3a2a1b;
    --texto-claro: #3a2a1b;
    --texto-oscuro: #ffffff;
    --fondo-claro: #f9f9f8;
    --fondo-oscuro: #121212;
    --card-claro: rgba(255,255,255,0.95);
    --card-oscuro: rgba(30,30,30,0.95);
}

html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100vh;
    font-family: 'Poppins', sans-serif;
    transition: background .4s ease, color .4s ease;
}

body.tema-claro {
    background: var(--fondo-claro);
    color: var(--texto-claro);
}

body.tema-oscuro {
    background: var(--fondo-oscuro);
    color: var(--texto-oscuro);
}

header {
    position: fixed;
    top: 15px;
    left: 20px;
    z-index: 10;
}

.menu-icon {
    width: 36px;
    height: 36px;
    cursor: pointer;
    transition: transform .25s ease, filter .3s ease;
    filter: brightness(0);
}
body.tema-oscuro .menu-icon {
    filter: brightness(0) invert(1);
}
.menu-icon:hover { transform: scale(1.1); }

.menu-lateral {
    position: fixed;
    top: 0;
    left: 0;
    transform: translateX(-100%);
    width: 250px;
    height: 100%;
    backdrop-filter: blur(12px);
    box-shadow: 4px 0 12px rgba(0,0,0,0.2);
    display: flex;
    flex-direction: column;
    padding: 2.5rem 1.2rem;
    gap: 1rem;
    transition: transform .35s ease, background .4s ease, color .4s ease;
    z-index: 999;
}
body.tema-claro .menu-lateral {
    background: rgba(255,255,255,0.96);
}
body.tema-oscuro .menu-lateral {
    background: rgba(30,30,30,0.96);
    box-shadow: 4px 0 12px rgba(0,0,0,0.5);
}
.menu-lateral.abierto { transform: translateX(0); }

.menu-lateral a {
    text-decoration: none;
    font-weight: 600;
    font-size: 1.05rem;
    padding: 0.5rem 0.8rem;
    border-radius: 10px;
    transition: all .25s ease;
    color: inherit;
}
body.tema-claro .menu-lateral a {
    color: #2c2c2c;
}
body.tema-oscuro .menu-lateral a {
    color: #f1f1f1;
}
body.tema-claro .menu-lateral a:hover,
body.tema-oscuro .menu-lateral a:hover {
    background: var(--verde);
    color: #fff;
}

.cerrar-menu {
    align-self: flex-end;
    font-size: 1.4rem;
    cursor: pointer;
    margin-bottom: 1.5rem;
    transition: transform 0.2s ease, color .3s ease;
    color: inherit;
}
body.tema-claro .cerrar-menu {
    color: #2c2c2c;
}
body.tema-oscuro .cerrar-menu {
    color: #f1f1f1;
}
.cerrar-menu:hover {
    transform: scale(1.2);
}

.overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.45);
    opacity: 0;
    pointer-events: none;
    transition: opacity .3s ease;
    z-index: 998;
}
.overlay.activo {
    opacity: 1;
    pointer-events: auto;
}

main {
    width: 100%;
    max-width: 900px;
    margin: 100px auto 60px auto;
    padding: 0 20px;
    box-sizing: border-box;
}

h1 {
    font-size: 1.9rem;
    font-weight: 700;
    margin-bottom: 30px;
    text-align: center;
    color: inherit;
}

.seccion {
    margin-bottom: 40px;
}

.seccion-titulo {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: inherit;
    border-bottom: 2px solid var(--verde);
    padding-bottom: 10px;
}

.card {
    border-radius: 20px;
    padding: 25px;
    margin-bottom: 20px;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background .4s ease;
}
body.tema-claro .card {
    background: var(--card-claro);
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
}
body.tema-oscuro .card {
    background: var(--card-oscuro);
    box-shadow: 0 5px 15px rgba(0,0,0,0.5);
}
.card:hover {
    transform: translateY(-2px);
}

.opcion {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 0;
    border-bottom: 1px solid rgba(0,0,0,0.1);
}
body.tema-oscuro .opcion {
    border-bottom-color: rgba(255,255,255,0.1);
}
.opcion:last-child {
    border-bottom: none;
}

.opcion-info {
    flex: 1;
}

.opcion-titulo {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 5px;
    color: inherit;
}

.opcion-descripcion {
    font-size: 0.9rem;
    opacity: 0.7;
    color: inherit;
}

.toggle {
    position: relative;
    width: 50px;
    height: 26px;
    background: #ccc;
    border-radius: 13px;
    cursor: pointer;
    transition: background .3s ease;
}
.toggle.activo {
    background: var(--verde);
}
.toggle::after {
    content: '';
    position: absolute;
    width: 22px;
    height: 22px;
    background: white;
    border-radius: 50%;
    top: 2px;
    left: 2px;
    transition: transform .3s ease;
}
.toggle.activo::after {
    transform: translateX(24px);
}

.btn {
    background: var(--verde);
    color: #fff;
    border: none;
    border-radius: 15px;
    padding: 12px 24px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all .3s ease;
    margin-top: 10px;
}
.btn:hover {
    background: #2fa66a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(58, 195, 125, 0.3);
}

.info-box {
    padding: 15px;
    border-radius: 12px;
    margin-top: 15px;
    font-size: 0.9rem;
}
body.tema-claro .info-box {
    background: rgba(58, 195, 125, 0.1);
    color: #2d5a3d;
}
body.tema-oscuro .info-box {
    background: rgba(58, 195, 125, 0.2);
    color: #a8e6c7;
}

/* Media Queries */
@@media (max-width: 768px) {
    main {
