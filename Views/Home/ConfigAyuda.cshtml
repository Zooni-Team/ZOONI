<style>
:root {
  --verde: #3ac37d;
  --marron: #3a2a1b;
  --rojo: #e74c3c;
  --fondo-claro: #f9f9f8;
}

/* ===== GENERAL ===== */
body {
  margin: 0;
  font-family: 'Poppins', sans-serif;
  background: @(tema == "oscuro" ? "#181818" : "var(--fondo-claro)");
  color: @(tema == "oscuro" ? "#fff" : "var(--marron)");
}

/* ===== HEADER ===== */
header {
  position: fixed;
  top: 15px;
  left: 20px;
  z-index: 10;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.menu-icon {
  width: 36px;
  height: 36px;
  cursor: pointer;
  transition: transform .25s ease, filter .3s ease;
  filter: brightness(0); /* negro en modo claro */
}
body.tema-oscuro .menu-icon {
  filter: brightness(0) invert(1); /* blanco en modo oscuro */
}
.menu-icon:hover { transform: scale(1.1); }

.back {
  font-size: 1.8rem;
  font-weight: 700;
  text-decoration: none;
  margin-left: 8px;
  color: inherit;
  transition: color .3s ease;
}
body.tema-claro .back {
  color: var(--marron);
}
body.tema-oscuro .back {
  color: #ffffff;
}

/* ===== MENU LATERAL ===== */
.menu-lateral {
  position: fixed;
  top: 0;
  left: 0;
  transform: translateX(-100%);
  width: 250px;
  height: 100%;
  backdrop-filter: blur(12px);
  box-shadow: 4px 0 12px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  padding: 2.5rem 1.2rem;
  gap: 1rem;
  transition: transform .35s ease, background .4s ease, color .4s ease;
  z-index: 999;
}
body.tema-claro .menu-lateral {
  background: rgba(255,255,255,0.96);
}
body.tema-oscuro .menu-lateral {
  background: rgba(30,30,30,0.96);
  box-shadow: 4px 0 12px rgba(0,0,0,0.5);
}
.menu-lateral.abierto { transform: translateX(0); }

.menu-lateral a {
  text-decoration: none;
  font-weight: 600;
  font-size: 1.05rem;
  padding: 0.5rem 0.8rem;
  border-radius: 10px;
  transition: all .25s ease;
  color: inherit;
}
body.tema-claro .menu-lateral a {
  color: #2c2c2c;
}
body.tema-oscuro .menu-lateral a {
  color: #f1f1f1;
}
body.tema-claro .menu-lateral a:hover,
body.tema-oscuro .menu-lateral a:hover {
  background: var(--verde);
  color: #fff;
}

.cerrar-menu {
  align-self: flex-end;
  font-size: 1.4rem;
  cursor: pointer;
  margin-bottom: 1.5rem;
  transition: transform 0.2s ease, color .3s ease;
  color: inherit;
}
body.tema-claro .cerrar-menu {
  color: #2c2c2c;
}
body.tema-oscuro .cerrar-menu {
  color: #f1f1f1;
}
.cerrar-menu:hover {
  transform: scale(1.2);
}

.overlay {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.45);
  opacity: 0;
  pointer-events: none;
  transition: opacity .3s ease;
  z-index: 998;
}
.overlay.activo { opacity: 1; pointer-events: auto; }

/* ===== MAIN ===== */
main {
  margin: 100px auto 50px auto;
  max-width: 500px;
  background: @(tema == "oscuro" ? "#242424" : "#fff");
  border-radius: 22px;
  padding: 25px;
  box-shadow: 0 5px 18px rgba(0,0,0,0.15);
}
h1 {
  text-align: center;
  color: var(--verde);
  font-size: 1.5rem;
  margin-bottom: 25px;
}

/* ===== SECCIONES ===== */
section {
  margin-bottom: 35px;
}

/* FAQ */
.faq-item {
  background: @(tema == "oscuro" ? "#2d2d2d" : "#f9f9f9");
  border: 1px solid @(tema == "oscuro" ? "#444" : "#ddd");
  border-radius: 14px;
  margin-bottom: 10px;
  overflow: hidden;
}
.faq-question {
  padding: 14px 18px;
  cursor: pointer;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background .2s ease;
}
.faq-question:hover {
  background: rgba(57,183,124,0.15);
}
.faq-answer {
  padding: 0 18px 14px 18px;
  display: none;
  font-size: 0.95rem;
  color: @(tema == "oscuro" ? "#ddd" : "#555");
}

/* FORMULARIO */
form {
  display: flex;
  flex-direction: column;
  gap: 14px;
}
input, textarea {
  border-radius: 12px;
  border: 1.5px solid @(tema == "oscuro" ? "#555" : "#ddd");
  padding: 10px 14px;
  font-size: 1rem;
  background: @(tema == "oscuro" ? "#1e1e1e" : "#fff");
  color: @(tema == "oscuro" ? "#fff" : "#222");
  outline: none;
  resize: none;
}
textarea { min-height: 100px; }
input:focus, textarea:focus {
  border-color: var(--verde);
  box-shadow: 0 0 0 3px rgba(57,183,124,0.25);
}
button {
  background: var(--verde);
  border: none;
  border-radius: 25px;
  padding: 12px 18px;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: 0.25s ease;
}
button:hover { background: #2fa567; transform: translateY(-2px); }

/* CONSEJOS */
.tip {
  background: rgba(57,183,124,0.12);
  padding: 12px 18px;
  border-radius: 12px;
  margin-bottom: 10px;
  font-size: 0.95rem;
  border-left: 4px solid var(--verde);
}

/* ANIMACIONES */
@@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-5px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>
</head>

