}

.corazon {
    position: absolute;
    top: 10%; 
    left: 50%;
    width: 26px;
    height: 26px;
    background: url('/img/recursos/corazon.png') center/contain no-repeat;
    opacity: 0;
    animation: flotarAura 1.8s ease-out forwards;
    pointer-events: none;
}

@@keyframes flotarAura {
    0% {
        transform: translate(-50%, 0) scale(0.7) rotate(0deg);
        opacity: 0;
    }
    20% { opacity: 1; }
    100% {
        transform: translate(var(--x), -100px) scale(1.2) rotate(var(--r));
        opacity: 0;
    }
}


</style>
</head>
