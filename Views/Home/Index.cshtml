@{
    ViewData["Title"] = "Inicio - Zooni";
    Layout = null;

    var mascotaNombre = ViewBag.MascotaNombre;
    var mascotaEspecie = ViewBag.MascotaEspecie?.ToString()?.ToLower() ?? "perro";
    var mascotaRaza = ViewBag.MascotaRaza?.ToString()?.ToLower() ?? "basico";
    var rutaAnimada = $"/img/mascotas/{mascotaEspecie}s/{mascotaRaza}/{mascotaEspecie}_basico.png";
    var rutaFoto = ViewBag.MascotaFoto ?? "";
}
<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
<title>@ViewData["Title"]</title>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
<style>
:root {
    --verde: #3ac37d;
    --amarillo: #FFD85A;
    --marron: #4B3B2B;
    --blanco: #ffffff;
}

html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    background: url('/img/fondos/bosque.png') center center / cover no-repeat fixed;
    font-family: 'Poppins', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* ----------------- HEADER Y MEN√ö ------------------ */
header {
    position: fixed;
    top: 15px;
    left: 20px;
    z-index: 10;
}

.menu-icon {
    width: 38px;
    height: 38px;
    display: block;
    cursor: pointer;
    transition: transform .25s ease;
}
.menu-icon:hover { transform: scale(1.1); }

.menu-lateral {
    position: fixed;
    top: 0;
    left: 0; 
    transform: translateX(-100%);
    width: 240px;
    height: 100%;
    background: rgba(255, 255, 255, 0.97);
    backdrop-filter: blur(12px);
    box-shadow: 4px 0 12px rgba(0,0,0,0.15);
    display: flex;
    flex-direction: column;
    padding: 2.5rem 1.2rem;
    gap: 1rem;
    transition: transform 0.35s ease;
    z-index: 999;
    border-right: none;
}
.menu-lateral.abierto { transform: translateX(0); }
.menu-lateral a {
    text-decoration: none;
    font-weight: 600;
    color: var(--marron);
    font-size: 1.1rem;
    padding: 0.6rem 0.8rem;
    border-radius: 12px;
    transition: all .25s ease;
}
.menu-lateral a:hover {
    background: var(--amarillo);
    color: #3c2a00;
}
.cerrar-menu {
    align-self: flex-end;
    font-size: 1.6rem;
    cursor: pointer;
    margin-bottom: 1.5rem;
    color: var(--marron);
}
.cerrar-menu:hover { transform: scale(1.2); }
.overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.25);
    opacity: 0; pointer-events: none;
    transition: opacity .3s ease;
    z-index: 8;
}
.overlay.activo { opacity: 1; pointer-events: auto; }

/* ----------------- MAIN ------------------ */
main {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    justify-content: flex-start;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    padding-top: 70px;
}
.mascota-nombre {
    font-weight: 700;
    font-size: 2.2rem;
    color: #fff;
    text-shadow: -1px -1px 2px rgba(0,0,0,0.5),
                 1px -1px 2px rgba(0,0,0,0.5),
                -1px  1px 2px rgba(0,0,0,0.5),
                 1px  1px 2px rgba(0,0,0,0.5);
    margin-bottom: 5px;
}

/* ----------------- FOTO CON FLECHAS ------------------ */
.mascota-wrapper {
    position: relative;
    display: inline-block;
    margin-top: 60px;
}

.mascota-img {
    width: 330px;
    height: auto;
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    opacity: 0;
    transition: opacity 0.45s ease, transform 0.45s ease;
    filter: drop-shadow(0px 4px 6px rgba(0,0,0,0.3));
    z-index: 0;
}

.mascota-img.visible {
    opacity: 1;
    z-index: 2;
    position: relative;
    transform: translateX(-50%) translateY(-10px);
    animation: flotar 3s ease-in-out infinite;
}
@@keyframes flotar {
    0%,100% { transform: translateX(-50%) translateY(-10px); }
    50% { transform: translateX(-50%) translateY(-18px); }
}

/* Flechas */
.arrow {
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
    font-size: 2rem;
    color: #fffaf0;
    background: rgba(60, 42, 27, 0.6);
    border: none;
    border-radius: 50%;
    width: 44px;
    height: 44px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.25s ease;
    z-index: 5;
}
.arrow:hover {
    background: #FFD85A;
    color: #3a2b00;
    transform: translateY(-50%) scale(1.15);
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
}
.arrow-left { left: -55px; }
.arrow-right { right: -55px; }

.fade {
    transition: opacity 0.6s ease, transform 0.6s ease;
}
.fade.hidden-left {
    transform: translateX(-80%) scale(0.95);
    opacity: 0;
    z-index: 1;
}

.fade.hidden-right {
    transform: translateX(80%) scale(0.95);
    opacity: 0;
    z-index: 1;
}

/* ----------------- BOTONES ------------------ */
.panel {
    border-radius: 28px;
    padding: 30px 25px;
    width: 90%;
    max-width: 400px;
    display: flex;
    justify-content: center;
    margin-top: 10px;
}
.botones {
    display: flex;
    flex-direction: column;
    gap: 15px;
    width: 100%;
}
.boton {
    background: linear-gradient(180deg, #FFD85A 0%, #FFCA3B 100%);
    border: 2px solid rgba(255, 213, 90, 0.6);
    border-radius: 18px;
    padding: 18px 0;
    font-weight: 700;
    font-size: 1.5rem;
    color: #3a2b00;
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    cursor: pointer;
    transition: all 0.2s ease;
}
.boton:hover {
    background: linear-gradient(180deg, #FFE17C 0%, #FFD85A 100%);
    transform: translateY(-2px);
}

/* ----------------- FOOTER ------------------ */
footer {
    position: absolute;
    bottom: 20px;
    text-align: center;
    width: 100%;
    font-size: 1.2rem;
    color: #654b34;
    opacity: 0.8;
}

@@media (max-width: 480px) {
    .mascota-img { width: 260px; }
    .arrow-left { left: -40px; }
    .arrow-right { right: -40px; }
}
.mascota-img.visible {
    animation: flotar 3s ease-in-out infinite, reboteEntrada 0.45s ease;
}

@@keyframes reboteEntrada {
    0% { transform: translateX(-50%) scale(0.9); opacity: 0; }
    60% { transform: translateX(-50%) scale(1.05); opacity: 1; }
    100% { transform: translateX(-50%) scale(1); }
}

</style>
</head>
<body>
<header>
    <img src="~/img/icons/hamburger.png" alt="Men√∫" class="menu-icon" id="abrirMenu" />
</header>

<div class="menu-lateral" id="menuLateral">
    <div class="cerrar-menu" id="cerrarMenu">‚úñ</div>
    <a href="/Home/Index">üè† Inicio</a>
    <a href="/Comunidad">üë• Comunidad</a>
    <a href="/Marketplace">üõí Marketplace</a>
    <a href="/home/FichaMedica">üíâ Ficha m√©dica</a>
    <a href="/home/calendario">üìÖ Calendario</a>
    <a href="/Chat/ChatZooni">üí¨ ChatBot</a>
    <a href="/Closet">üëï Closet</a>
    <a href="/Home/Perfil">üë§ Perfil</a>
    <a href="/Home/configuracion">‚öôÔ∏è Configuraci√≥n</a>
    <a href="/Auth/Logout" style="color:red;">üö™ Cerrar sesi√≥n</a>
</div>

<div class="overlay" id="overlay"></div>

<main>
@if (mascotaNombre != null)
{
    <div class="mascota-nombre">@mascotaNombre</div>

    <div class="mascota-wrapper" id="mascotaWrapper">
        <!-- Foto animada -->
        <img src="@rutaAnimada"
             alt="Avatar @mascotaNombre"
             class="mascota-img fade visible"
             id="fotoAnimada"/>

        <!-- Foto real -->
        <img src="@(string.IsNullOrEmpty(rutaFoto) ? "" : rutaFoto)"
             alt="Foto real de @mascotaNombre"
             class="mascota-img fade"
             id="fotoReal"/>

        <!-- Flechas -->
        <button class="arrow arrow-left" id="prevFoto">‚Æú</button>
        <button class="arrow arrow-right" id="nextFoto">‚Æû</button>
    </div>

    <div class="panel">
        <div class="botones">
            <button class="boton" onclick="location.href='@Url.Action("Juegos", "Home")'">üéÆ Juegos</button>
            <button class="boton">üíâ Historial</button>
            <button class="boton">üìÖ Calendario</button>
            <button class="boton">üëï Closet</button>
        </div>
    </div>
}
else
{
    <p style="color:#4b3b2b;font-weight:500;background:rgba(255,255,255,0.8);padding:1rem 1.5rem;border-radius:16px;">No ten√©s mascota registrada a√∫n üê∂</p>
}
</main>

<footer>üêæ Zooni ¬∑ Tu mascota, tu mundo.</footer>

<script>
const menu = document.getElementById("menuLateral");
const overlay = document.getElementById("overlay");
const abrir = document.getElementById("abrirMenu");
const cerrar = document.getElementById("cerrarMenu");
function cerrarMenu() {
    menu.classList.remove("abierto");
    overlay.classList.remove("activo");
}
abrir.addEventListener("click", () => {
    menu.classList.add("abierto");
    overlay.classList.add("activo");
});
cerrar.addEventListener("click", cerrarMenu);
overlay.addEventListener("click", cerrarMenu);
</script>

<script>
const animada = document.getElementById("fotoAnimada");
const real = document.getElementById("fotoReal");
const prev = document.getElementById("prevFoto");
const next = document.getElementById("nextFoto");
let mostrandoReal = false;

function alternarFoto(direccion) {
    if (mostrandoReal) {
        real.classList.remove("visible");
        real.classList.add(direccion === "left" ? "hidden-left" : "hidden-right");
        animada.classList.remove("hidden-left", "hidden-right");
        animada.classList.add("visible");
    } else {
        animada.classList.remove("visible");
        animada.classList.add(direccion === "left" ? "hidden-left" : "hidden-right");
        real.classList.remove("hidden-left", "hidden-right");
        real.classList.add("visible");
    }
    mostrandoReal = !mostrandoReal;
}
prev.addEventListener("click", () => alternarFoto("left"));
next.addEventListener("click", () => alternarFoto("right"));
</script>

</body>
</html>
