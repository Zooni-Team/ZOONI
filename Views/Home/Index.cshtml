    info.textContent = `Pod√©s agregar hasta ${disponibles} bot√≥n(es) m√°s`;
    lista.appendChild(info);
    
    // Obtener URLs de botones ya agregados
    const botonesExistentes = Array.from(contenedorBotones.querySelectorAll('.boton')).map(b => b.getAttribute('data-url'));
    
    serviciosDisponibles.forEach(servicio => {
        const yaExiste = botonesExistentes.includes(servicio.url);
        
        const item = document.createElement('div');
        item.className = 'servicio-item';
        if (yaExiste) {
            item.style.opacity = '0.5';
            item.style.cursor = 'not-allowed';
        }
        
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.value = servicio.url;
        checkbox.disabled = yaExiste;
        checkbox.dataset.texto = servicio.texto;
        checkbox.dataset.tipo = servicio.tipo;
        
        const label = document.createElement('span');
        label.textContent = servicio.texto;
        
        item.appendChild(checkbox);
        item.appendChild(label);
        
        if (!yaExiste) {
            item.addEventListener('click', (e) => {
                if (!checkbox.disabled && e.target !== checkbox) {
                    // Verificar l√≠mite antes de seleccionar
                    const seleccionados = document.querySelectorAll('#listaServicios input[type="checkbox"]:checked:not(:disabled)').length;
                    if (!checkbox.checked && seleccionados >= disponibles) {
                        alert(`Solo pod√©s seleccionar hasta ${disponibles} bot√≥n(es) m√°s`);
                        return;
                    }
                    checkbox.checked = !checkbox.checked;
                    item.classList.toggle('seleccionado', checkbox.checked);
                }
            });
            checkbox.addEventListener('change', (e) => {
                const seleccionados = document.querySelectorAll('#listaServicios input[type="checkbox"]:checked:not(:disabled)').length;
                if (checkbox.checked && seleccionados > disponibles) {
                    checkbox.checked = false;
                    alert(`Solo pod√©s seleccionar hasta ${disponibles} bot√≥n(es) m√°s`);
                    return;
                }
                item.classList.toggle('seleccionado', checkbox.checked);
            });
        }
        
        lista.appendChild(item);
    });
    
    modal.classList.add('activo');
}

function cerrarModalAgregar() {
    document.getElementById('modalAgregar').classList.remove('activo');
}

function agregarServiciosSeleccionados() {
    const checkboxes = document.querySelectorAll('#listaServicios input[type="checkbox"]:checked:not(:disabled)');
    
    // Contar TODOS los botones actuales (m√°ximo 4 en total)
    const botonesActuales = contenedorBotones.querySelectorAll('.boton').length;
    const maxBotones = 4;
    
    if (botonesActuales >= maxBotones) {
        alert(`Ya ten√©s el m√°ximo de ${maxBotones} botones. Elimin√° alguno para agregar m√°s.`);
        return;
    }
    
    let agregados = 0;
    const disponibles = maxBotones - botonesActuales;
    
    checkboxes.forEach((checkbox, index) => {
        if (agregados >= disponibles) {
            return; // Ya se alcanz√≥ el l√≠mite
        }
        
        const texto = checkbox.dataset.texto;
        const url = checkbox.value;
        const tipo = checkbox.dataset.tipo;
        
        // Verificar que no exista ya
        const existe = Array.from(contenedorBotones.querySelectorAll('.boton')).some(b => b.getAttribute('data-url') === url);
        if (!existe) {
            crearBoton(texto, url, tipo, true);
            agregados++;
        }
    });
    
    if (agregados > 0) {
        guardarBotones();
        cerrarModalAgregar();
        if (agregados < checkboxes.length) {
            alert(`Se agregaron ${agregados} bot√≥n(es). L√≠mite de ${maxBotones} botones alcanzado.`);
        }
    } else {
        alert('No hay servicios seleccionados o ya est√°n agregados');
    }
}

