@{
    var mascotasJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.TodasMascotas ?? new List<object>());
}
const todasMascotas = @Html.Raw(mascotasJson);
const indiceActual = @(ViewBag.IndiceMascotaActual ?? 0);
const prevMascota = document.getElementById("prevMascota");
const nextMascota = document.getElementById("nextMascota");

if (todasMascotas && todasMascotas.length > 1) {
    if (prevMascota) {
        prevMascota.addEventListener("click", () => {
