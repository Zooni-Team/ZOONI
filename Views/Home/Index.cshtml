<script>
const menu = document.getElementById("menuLateral");
const overlay = document.getElementById("overlay");
const abrir = document.getElementById("abrirMenu");
const cerrar = document.getElementById("cerrarMenu");
function cerrarMenu() {
    menu.classList.remove("abierto");
    overlay.classList.remove("activo");
}
abrir.addEventListener("click", () => {
    menu.classList.add("abierto");
    overlay.classList.add("activo");
});
cerrar.addEventListener("click", cerrarMenu);
overlay.addEventListener("click", cerrarMenu);
</script>

<script>
// ========== NAVEGACI√ìN ENTRE MASCOTAS ==========
@{
    var mascotasJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.TodasMascotas ?? new List<object>());
}
const todasMascotas = @Html.Raw(mascotasJson);
const indiceActual = @(ViewBag.IndiceMascotaActual ?? 0);
const prevMascota = document.getElementById("prevMascota");
const nextMascota = document.getElementById("nextMascota");

if (todasMascotas && todasMascotas.length > 1) {
    if (prevMascota) {
        prevMascota.addEventListener("click", () => {
            const nuevoIndice = indiceActual > 0 ? indiceActual - 1 : todasMascotas.length - 1;
            cambiarMascota(todasMascotas[nuevoIndice].Id_Mascota);
        });
    }
    
    if (nextMascota) {
        nextMascota.addEventListener("click", () => {
            const nuevoIndice = indiceActual < todasMascotas.length - 1 ? indiceActual + 1 : 0;
            cambiarMascota(todasMascotas[nuevoIndice].Id_Mascota);
        });
    }
}

function cambiarMascota(mascotaId) {
    const form = document.createElement("form");
    form.method = "POST";
    form.action = "@Url.Action("CambiarMascota", "Home")";
    
    // Obtener el token anti-forgery del formulario oculto
    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
    if (tokenInput) {
        const token = document.createElement("input");
        token.type = "hidden";
        token.name = "__RequestVerificationToken";
        token.value = tokenInput.value;
        form.appendChild(token);
    }
    
    const input = document.createElement("input");
    input.type = "hidden";
    input.name = "MascotaId";
    input.value = mascotaId;
    form.appendChild(input);
    
    document.body.appendChild(form);
    form.submit();
}

// ========== ALTERNAR FOTO ANIMADA/REAL ==========
const animada = document.getElementById("fotoAnimada");
const real = document.getElementById("fotoReal");
const prevFoto = document.getElementById("prevFoto");
const nextFoto = document.getElementById("nextFoto");
let mostrandoReal = false;

const tieneFoto = "@(string.IsNullOrEmpty(rutaFoto) ? "false" : "true")" === "true";

function alternarFoto(direccion) {
    if (!tieneFoto) return;
    
    if (mostrandoReal) {
        real.classList.remove("visible");
        real.classList.add(direccion === "left" ? "hidden-left" : "hidden-right");
        animada.classList.remove("hidden-left", "hidden-right");
        animada.classList.add("visible");
    } else {
        animada.classList.remove("visible");
        animada.classList.add(direccion === "left" ? "hidden-left" : "hidden-right");
        real.classList.remove("hidden-left", "hidden-right");
        real.classList.add("visible");
    }
    mostrandoReal = !mostrandoReal;
}

// Doble clic en la imagen para alternar foto (si hay foto real)
if (tieneFoto && animada) {
    animada.addEventListener("dblclick", () => alternarFoto("right"));
    if (real) {
        real.addEventListener("dblclick", () => alternarFoto("left"));
    }
}
</script>

