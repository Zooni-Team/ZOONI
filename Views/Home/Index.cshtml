}


.mascota-img {
    width: 330px;
    height: auto;
    margin-bottom: -25px;
    margin-top: 60px;
    animation: flotar 3s ease-in-out infinite;
    filter: drop-shadow(0px 4px 6px rgba(0,0,0,0.3));
    transform: translateY(-10px);
    
}

@@keyframes flotar {
    0%,100% { transform: translateY(-10px); }
    50% { transform: translateY(-18px); }
}

.panel {
