            cambiarMascota(todasMascotas[nuevoIndice].Id_Mascota);
        });
    }
    
    if (nextMascota) {
        nextMascota.addEventListener("click", () => {
            const nuevoIndice = indiceActual < todasMascotas.length - 1 ? indiceActual + 1 : 0;
            cambiarMascota(todasMascotas[nuevoIndice].Id_Mascota);
        });
    }
}

function cambiarMascota(mascotaId) {
    const form = document.createElement("form");
    form.method = "POST";
    form.action = "@Url.Action("CambiarMascota", "Home")";
    
    // Obtener el token anti-forgery del formulario oculto
    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
    if (tokenInput) {
        const token = document.createElement("input");
        token.type = "hidden";
        token.name = "__RequestVerificationToken";
        token.value = tokenInput.value;
        form.appendChild(token);
    }
    
    const input = document.createElement("input");
    input.type = "hidden";
    input.name = "MascotaId";
    input.value = mascotaId;
    form.appendChild(input);
    
    document.body.appendChild(form);
    form.submit();
}

