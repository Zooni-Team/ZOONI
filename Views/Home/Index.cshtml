    font-weight: 700;
    font-size: 1.8rem;
    color: #3a2b00;
    box-shadow: 0 5px 10px rgba(0,0,0,0.2), inset 0 1px 0 rgba(255,255,255,0.3);
    cursor: pointer;
    width: 100%;
    transition: background 0.2s ease, transform 0.1s ease;
    letter-spacing: 0.5px;
}

.boton:hover {
    background: linear-gradient(180deg, #ffd64f 0%, #ffc020 100%);
    transform: translateY(-2px);
