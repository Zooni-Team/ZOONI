<script>
// ========== PERSONALIZACI√ìN DE BOTONES ==========
const STORAGE_KEY = 'zooni_botones_personalizados';
const contenedorBotones = document.getElementById('contenedorBotones');
let modoOrdenar = false;

// Obtener botones por defecto del HTML
function obtenerBotonesPorDefecto() {
    return Array.from(contenedorBotones.querySelectorAll('.boton[data-default="true"]')).map(btn => {
        const textoSpan = btn.querySelector('span:not(.drag-handle)');
        return {
            texto: textoSpan ? textoSpan.textContent.trim() : btn.textContent.trim(),
            url: btn.getAttribute('data-url'),
            tipo: btn.classList.contains('boton-sos') ? 'sos' : 'normal',
            personalizado: false
        };
    });
}

// Cargar botones guardados
function cargarBotones() {
    const guardados = localStorage.getItem(STORAGE_KEY);
    if (guardados) {
        try {
            const botones = JSON.parse(guardados);
            contenedorBotones.innerHTML = '';
            botones.forEach(btn => {
                crearBoton(btn.texto, btn.url, btn.tipo, btn.personalizado);
            });
        } catch (e) {
            console.error('Error al cargar botones:', e);
            // Si hay error, reconstruir los botones por defecto
            reconstruirBotonesPorDefecto();
        }
