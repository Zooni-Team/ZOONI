        lista.appendChild(mensaje);
        
        // Cambiar el bot√≥n a "Ok" y que cierre el modal
        if (btnModal) {
            btnModal.textContent = 'Ok';
            btnModal.onclick = (e) => {
                e.preventDefault();
                cerrarModalAgregar();
            };
        }
        
        modal.classList.add('activo');
        return;
    }
    
    // Restaurar el bot√≥n original si no est√° en modo l√≠mite
    if (btnModal) {
        btnModal.textContent = 'Agregar Seleccionados';
        btnModal.onclick = (e) => {
