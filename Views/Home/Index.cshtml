// Crear un bot√≥n
function crearBoton(texto, url, tipo = 'normal', personalizado = false) {
    const boton = document.createElement('button');
    boton.className = tipo === 'sos' ? 'boton boton-sos' : 'boton';
    boton.setAttribute('data-url', url);
    boton.setAttribute('data-tipo', tipo);
    if (personalizado) {
        boton.setAttribute('data-personalizado', 'true');
    } else {
        boton.setAttribute('data-default', 'true');
    }
    
    // Bot√≥n eliminar - A LA IZQUIERDA (todos los botones se pueden eliminar)
    const btnEliminar = document.createElement('button');
    btnEliminar.className = 'btn-eliminar-boton';
    btnEliminar.textContent = '‚úñ';
    btnEliminar.title = 'Eliminar';
    btnEliminar.type = 'button';
    if (personalizado) {
        btnEliminar.setAttribute('data-personalizado', 'true');
    }
    btnEliminar.onclick = (e) => {
        e.stopPropagation();
        e.preventDefault();
        if (confirm('¬øEliminar este bot√≥n?')) {
            boton.remove();
            guardarBotones();
            actualizarFlechasOrden();
        }
        return false;
    };
    
    // Texto del bot√≥n
    const textoSpan = document.createElement('span');
    textoSpan.textContent = texto;
    textoSpan.style.flex = '1';
    textoSpan.style.textAlign = 'center';
    textoSpan.style.pointerEvents = 'none';
    
    // Controles de orden (flechas arriba/abajo) - A LA DERECHA
