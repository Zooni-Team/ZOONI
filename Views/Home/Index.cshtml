// Funciones para mover botones
function moverBotonArriba(boton) {
    const botones = Array.from(contenedorBotones.querySelectorAll('.boton'));
    const index = botones.indexOf(boton);
    if (index > 0) {
        contenedorBotones.insertBefore(boton, botones[index - 1]);
        guardarBotones();
        actualizarFlechasOrden();
    }
}

function moverBotonAbajo(boton) {
    const botones = Array.from(contenedorBotones.querySelectorAll('.boton'));
    const index = botones.indexOf(boton);
    if (index < botones.length - 1) {
        contenedorBotones.insertBefore(botones[index + 1], boton);
        guardarBotones();
        actualizarFlechasOrden();
    }
}

function actualizarFlechasOrden() {
    const botones = Array.from(contenedorBotones.querySelectorAll('.boton'));
    botones.forEach((boton, index) => {
        const controles = boton.querySelector('.controles-orden');
        if (controles) {
            const btnArriba = controles.querySelector('.btn-flecha-orden:first-child');
            const btnAbajo = controles.querySelector('.btn-flecha-orden:last-child');
            if (btnArriba) btnArriba.disabled = index === 0;
            if (btnAbajo) btnAbajo.disabled = index === botones.length - 1;
        }
    });
}

// Agregar event listeners
function agregarEventListeners() {
    document.querySelectorAll('.boton').forEach(btn => {
        const url = btn.getAttribute('data-url');
        if (url) {
            btn.onclick = () => {
                if (!modoOrdenar) {
                    location.href = url;
                }
            };
        }
