                <label for="Fecha_Nacimiento">üéÇ Fecha de Nacimiento</label>
                <input type="date" id="Fecha_Nacimiento" name="Fecha_Nacimiento" 
                       value="@(Model.Fecha_Nacimiento?.ToString("yyyy-MM-dd") ?? "")" />
                <small style="display: block; margin-top: 0.5rem; opacity: 0.7;">
                    Si ingres√°s la fecha de nacimiento, la edad se calcular√° autom√°ticamente d√≠a tras d√≠a.
                </small>
            </div>

            <div class="form-group">
                <label for="PesoDisplay">‚öñÔ∏è Peso (kg)</label>
                @{
                    string pesoValorInput = "";
                    if (!string.IsNullOrEmpty(pesoDisplay))
                    {
                        pesoValorInput = pesoDisplay.Replace(" kg", "");
                    }
                    else
                    {
                        pesoValorInput = Model.Peso.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);
                    }
                }
                <input type="text" id="PesoDisplay" name="PesoDisplay" 
                       value="@pesoValorInput" 
                       placeholder="Ej: 5.5 o 5,5" />
                <small style="display: block; margin-top: 0.5rem; opacity: 0.7;">
                    Tambi√©n pod√©s usar un slider m√°s abajo
                </small>
            </div>

            <div class="form-group">
                <label for="Peso">‚öñÔ∏è Peso (slider)</label>
                <div class="slider-container">
                    @{
                        decimal pesoSlider = 0.1M;
                        if (!string.IsNullOrEmpty(pesoDisplay))
                        {
                            string pesoLimpio = pesoDisplay.Replace(" kg", "").Replace(",", ".");
                            if (decimal.TryParse(pesoLimpio, System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out decimal pesoParseado))
                            {
                                pesoSlider = pesoParseado;
                            }
                        }
                        else
                        {
                            // Usar Model.Peso solo si no hay pesoDisplay, pero verificar si est√° multiplicado
                            pesoSlider = Model.Peso;
                            // Si el peso parece estar multiplicado por 10 (>= 10 y no tiene decimales significativos)
                            if (pesoSlider >= 10 && pesoSlider % 1 == 0)
                            {
                                pesoSlider = pesoSlider / 10;
                            }
                        }
                        // Asegurar que el peso est√© en un rango v√°lido
                        if (pesoSlider < 0.1M) pesoSlider = 0.1M;
                        if (pesoSlider > 80M) pesoSlider = 80M;
                    }
                    <input type="range" id="Peso" name="Peso" min="0.1" max="80" step="0.1" 
                           value="@pesoSlider.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)" />
