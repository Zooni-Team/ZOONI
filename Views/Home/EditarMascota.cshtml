                    <input type="range" id="Edad" name="Edad" min="0" max="240" 
                           value="@Model.Edad" />
                    <div class="valor-display" id="edadTexto">
                        @{
                            int a√±os = Model.Edad / 12;
                            int meses = Model.Edad % 12;
                            string edadText = $"{(a√±os > 0 ? $"{a√±os} a√±o{(a√±os > 1 ? "s" : "")}" : "")}";
                            if (meses > 0)
                            {
                                edadText += $"{(a√±os > 0 ? " y " : "")}{meses} mes{(meses > 1 ? "es" : "")}";
                            }
                            if (string.IsNullOrEmpty(edadText)) edadText = "0 meses";
                        }
                        @edadText
