<script>
const menu = document.getElementById("menuLateral");
const overlay = document.getElementById("overlay");
const header = document.querySelector("header");

document.getElementById("abrirMenu").onclick = () => {
    menu.classList.add("abierto");
    overlay.classList.add("activo");
    if(header) {
        header.style.opacity = "0";
        header.style.visibility = "hidden";
        header.style.pointerEvents = "none";
    }
};

document.getElementById("cerrarMenu").onclick = cerrarMenu;
overlay.onclick = cerrarMenu;

function cerrarMenu() {
    menu.classList.remove("abierto");
    overlay.classList.remove("activo");
    if(header) {
        header.style.opacity = "1";
        header.style.visibility = "visible";
        header.style.pointerEvents = "auto";
    }
}

// Slider de peso
const pesoSlider = document.getElementById("Peso");
const pesoTexto = document.getElementById("pesoTexto");
const pesoInput = document.getElementById("PesoDisplay");

function formatearPeso(valor) {
    valor = parseFloat(valor);
    let decimales = valor <= 1 ? 2 : 1;
    return valor.toFixed(decimales).replace(".", ",") + " kg";
}

// Sincronizar valor inicial del input con el slider
if (pesoInput && pesoInput.value) {
    const valorInicial = parseFloat(pesoInput.value.replace(",", "."));
    if (!isNaN(valorInicial) && valorInicial >= 0.1 && valorInicial <= 80) {
        pesoSlider.value = valorInicial;
        pesoTexto.textContent = formatearPeso(valorInicial);
    }
}

pesoSlider.addEventListener("input", () => {
    const valor = parseFloat(pesoSlider.value);
    pesoTexto.textContent = formatearPeso(valor);
    if (pesoInput) {
        pesoInput.value = valor.toFixed(2).replace(".", ",");
    }
});

pesoInput.addEventListener("input", () => {
    const valor = pesoInput.value.replace(",", ".");
    if (!isNaN(valor) && valor !== "") {
        const numValor = parseFloat(valor);
        if (numValor >= 0.1 && numValor <= 300) {
            pesoSlider.value = numValor;
            pesoTexto.textContent = formatearPeso(numValor);
        }
    }
});

// Slider de edad
const edadSlider = document.getElementById("Edad");
const edadTexto = document.getElementById("edadTexto");

edadSlider.addEventListener("input", () => {
    const m = parseInt(edadSlider.value);
    const a√±os = Math.floor(m / 12);
    const meses = m % 12;
    let texto = "";
    if (a√±os > 0) {
        texto += a√±os + " a√±o" + (a√±os > 1 ? "s" : "");
    }
    if (meses > 0) {
        if (a√±os > 0) texto += " y ";
        texto += meses + " mes" + (meses > 1 ? "es" : "");
    }
    if (texto === "") texto = "0 meses";
    edadTexto.textContent = texto;
});

// Actualizar edad autom√°ticamente cuando cambia la fecha de nacimiento
const fechaNacimiento = document.getElementById("Fecha_Nacimiento");
fechaNacimiento.addEventListener("change", () => {
    if (fechaNacimiento.value) {
        const fecha = new Date(fechaNacimiento.value);
        const hoy = new Date();
        let a√±os = hoy.getFullYear() - fecha.getFullYear();
        let meses = hoy.getMonth() - fecha.getMonth();
        
        if (hoy.getDate() < fecha.getDate()) {
            meses--;
        }
        
        if (meses < 0) {
            a√±os--;
            meses += 12;
        }
        
        const edadMeses = (a√±os * 12) + meses;
        edadSlider.value = edadMeses;
        
        let texto = "";
        if (a√±os > 0) {
            texto += a√±os + " a√±o" + (a√±os > 1 ? "s" : "");
        }
        if (meses > 0) {
            if (a√±os > 0) texto += " y ";
            texto += meses + " mes" + (meses > 1 ? "es" : "");
        }
        if (texto === "") texto = "0 meses";
        edadTexto.textContent = texto;
    }
});

