<!-- Modal Cambiar Contrase√±a -->
<div class="modal" id="modalCambiarContrasena">
    <div class="modal-content">
        <h3>üîë Cambiar Contrase√±a</h3>
        <form method="post" action="/Home/CambiarContrasena" id="formCambiarContrasena">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="ContrasenaActualCambiar">Contrase√±a Actual</label>
                <div class="input-group">
                    <input type="password" id="ContrasenaActualCambiar" name="ContrasenaActual" required autocomplete="current-password" />
                    <button type="button" class="toggle-password" onclick="togglePassword('ContrasenaActualCambiar', this)">üëÅÔ∏è</button>
                </div>
            </div>
            <div class="form-group">
                <label for="NuevaContrasena">Nueva Contrase√±a</label>
                <div class="input-group">
                    <input type="password" id="NuevaContrasena" name="NuevaContrasena" required autocomplete="new-password" minlength="6" />
                    <button type="button" class="toggle-password" onclick="togglePassword('NuevaContrasena', this)">üëÅÔ∏è</button>
