</div>

<script>
const menu = document.getElementById("menuLateral");
const overlay = document.getElementById("overlay");
document.getElementById("abrirMenu").onclick = () => {
    menu.classList.add("abierto");
    overlay.classList.add("activo");
};
document.getElementById("cerrarMenu").onclick = cerrarMenu;
overlay.onclick = cerrarMenu;

function cerrarMenu() {
    menu.classList.remove("abierto");
    overlay.classList.remove("activo");
}

function mostrarModalCambiarContrasena() {
    document.getElementById('modalCambiarContrasena').classList.add('activo');
    overlay.classList.add('activo');
    document.getElementById('ContrasenaActualCambiar').focus();
}

function mostrarModalEliminarCuenta() {
    document.getElementById('modalEliminarCuenta').classList.add('activo');
    overlay.classList.add('activo');
    document.getElementById('ContrasenaEliminar').focus();
}

function cerrarModal(modalId) {
    document.getElementById(modalId).classList.remove('activo');
    overlay.classList.remove('activo');
    // Limpiar formularios
    const form = document.querySelector(`#${modalId} form`);
    if (form) form.reset();
}

function togglePassword(inputId, button) {
    const input = document.getElementById(inputId);
    if (input.type === 'password') {
        input.type = 'text';
        button.textContent = 'üôà';
    } else {
        input.type = 'password';
        button.textContent = 'üëÅÔ∏è';
    }
}

// Validar que las contrase√±as coincidan al cambiar
document.getElementById('formCambiarContrasena')?.addEventListener('submit', function(e) {
    const nueva = document.getElementById('NuevaContrasena').value;
    const confirmar = document.getElementById('ConfirmarContrasena').value;
    
    if (nueva !== confirmar) {
        e.preventDefault();
        alert('Las contrase√±as no coinciden');
        return false;
    }
    
    if (nueva.length < 6) {
        e.preventDefault();
        alert('La contrase√±a debe tener al menos 6 caracteres');
        return false;
    }
    
    return true;
});

// Cerrar modales al hacer clic fuera
document.querySelectorAll('.modal').forEach(modal => {
    modal.addEventListener('click', function(e) {
        if (e.target === this) {
            cerrarModal(this.id);
        }
    });
});

// Solo permitir n√∫meros en el campo tel√©fono
function soloNumeros(event) {
    const char = String.fromCharCode(event.which);
    if (!/[0-9]/.test(char)) {
        event.preventDefault();
        return false;
    }
    return true;
}

// Tambi√©n validar en tiempo real
document.getElementById('Telefono')?.addEventListener('input', function(e) {
    this.value = this.value.replace(/[^0-9]/g, '');
});

</script>
