}

.vacuna-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.vacuna-nombre {
  font-weight: 600;
  font-size: 1rem;
  color: var(--marron);
}

.vacuna-fecha {
  font-size: 0.9rem;
  color: #666;
}

.vacuna-vet {
  font-size: 0.9rem;
  color: #555;
}

.vacuna-dias {
  font-size: 0.85rem;
  font-weight: 600;
  color: #222;
}

/* ESTADOS VISUALES */
.vacuna-verde {
  background-color: #d4f7e2 !important;
}
.vacuna-amarilla {
  background-color: #fff9d0 !important;
}
.vacuna-roja {
  background-color: #ffd0d0 !important;
}

/* BOTONES */
.vacuna-botones {
  display: flex;
  gap: 6px;
  align-items: center;
}

.btn-eliminar {
  border: none;
  cursor: pointer;
  padding: 7px 9px;
  border-radius: 8px;
  background: var(--rojo);
  color: #fff;
  transition: 0.2s;
}
.btn-eliminar:hover {
  background: #ff4c4c;
}

/* üß© MODAL */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.modal.activo {
  display: flex;
}
.modal-content {
  background: #fff;
  padding: 2rem 1.8rem;
  border-radius: 22px;
  box-shadow: 0 8px 22px rgba(0, 0, 0, 0.25);
  width: 92%;
