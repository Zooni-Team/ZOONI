  width: 140px;
  height: auto;
  animation: flotar 3s ease-in-out infinite;
  filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.25));
}
@@keyframes flotar {
  0%, 100% {
    transform: translateY(-5px);
  }
  50% {
    transform: translateY(5px);
  }
}
.ficha-top h2 {
  font-weight: 700;
  font-size: 1.8rem;
  margin: 0.4rem 0;
  color: var(--marron);
}
.ficha-top .info {
  font-size: 0.95rem;
  line-height: 1.5;
  color: #444;
}

/* üíä CONTENEDOR PRINCIPAL */
