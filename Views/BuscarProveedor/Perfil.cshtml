@{
    ViewData["Title"] = "Perfil Proveedor - Zooni";
    Layout = null;
    var tema = ViewBag.Tema ?? Context.Session.GetString("Tema") ?? "claro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/zooni-design-system.css" />
    <style>
        body {
            background: url('/img/fondos/bosque.png') center center / cover no-repeat fixed;
            min-height: 100vh;
            padding: 20px;
        }
        body.tema-oscuro {
            background-color: rgba(0, 0, 0, 0.5);
            background-blend-mode: overlay;
            filter: brightness(0.6);
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
        }
    </style>
</head>
<body class="tema-@tema">
<div class="container">
    @if (ViewBag.Proveedor != null)
    {
        <div style="background: white; border-radius: 12px; padding: 30px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 30px;">
            <div style="display: flex; gap: 30px; margin-bottom: 30px;">
                @if (!string.IsNullOrEmpty(ViewBag.Proveedor["FotoPerfil"]?.ToString()))
                {
                    <img src="@ViewBag.Proveedor["FotoPerfil"]" alt="Foto" style="width: 200px; height: 200px; object-fit: cover; border-radius: 12px;" />
                }
                else
                {
                    <div style="width: 200px; height: 200px; background: #f0f0f0; border-radius: 12px; display: flex; align-items: center; justify-content: center; color: #999;">
                        Sin foto
                    </div>
                }
                
                <div style="flex: 1;">
                    <h1 style="margin: 0 0 10px 0; color: #8B5E3C;">@ViewBag.Proveedor["NombreCompleto"]</h1>
                    
                    <div style="display: flex; align-items: center; gap: 15px; margin: 15px 0;">
                        <div>
                            <span style="color: #FFD700; font-size: 24px;">‚≠ê</span>
                            <span style="font-weight: 600; font-size: 20px;">@ViewBag.Proveedor["Calificacion_Promedio"]</span>
                            <span style="color: #999;">(@ViewBag.Proveedor["Cantidad_Resenas"] rese√±as)</span>
                        </div>
                        @if (ViewBag.Proveedor["Precio_Hora"] != null && ViewBag.Proveedor["Precio_Hora"] != DBNull.Value)
                        {
                            <span style="font-weight: 600; font-size: 18px; color: #6c757d;">$@ViewBag.Proveedor["Precio_Hora"]/hora</span>
                        }
                    </div>
                    
                    <div style="color: #666; margin: 15px 0;">
                        <p style="margin: 5px 0;">üìç @ViewBag.Proveedor["Ciudad"], @ViewBag.Proveedor["Provincia"]</p>
                        <p style="margin: 5px 0;">üìÖ @ViewBag.Proveedor["Experiencia_Anios"] a√±os de experiencia</p>
                    </div>

                    <div style="display: flex; gap: 15px; margin-top: 20px;">
                        <a href="/BuscarProveedor/Contratar/@ViewBag.Proveedor["Id_Proveedor"]" style="flex: 1; display: inline-block; padding: 12px 24px; background-color: #3ac37d; color: white; border-radius: 8px; text-decoration: none; font-weight: 600; text-align: center;">
                            üìÖ Contratar Servicio
                        </a>
                        <button onclick="iniciarChat(@ViewBag.Proveedor["Id_User"])" style="flex: 1; padding: 12px 24px; background-color: #4A90E2; color: white; border: none; border-radius: 8px; font-weight: 600; cursor: pointer;">
                            üí¨ Chatear
                        </button>
                    </div>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(ViewBag.Proveedor["Descripcion"]?.ToString()))
            {
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee;">
                    <h3 style="color: #8B5E3C; margin-bottom: 10px;">Sobre m√≠</h3>
                    <p style="color: #666; line-height: 1.6;">@ViewBag.Proveedor["Descripcion"]</p>
                </div>
            }
            
            @if (ViewBag.TiposServicio != null && ViewBag.TiposServicio.Rows.Count > 0)
            {
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee;">
                    <h3 style="color: #8B5E3C; margin-bottom: 10px;">Servicios que Ofrezco</h3>
                    <div style="display: flex; flex-wrap: wrap; gap: 10px;">
                        @foreach (System.Data.DataRow tipo in ViewBag.TiposServicio.Rows)
                        {
                            <span style="background: #6c757d; color: white; padding: 5px 15px; border-radius: 20px; font-size: 14px;">@tipo["Descripcion"]</span>
                        }
                    </div>
                </div>
            }
            
            @if (ViewBag.Especies != null && ViewBag.Especies.Rows.Count > 0)
            {
                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee;">
                    <h3 style="color: #8B5E3C; margin-bottom: 10px;">Especies que Atiendo</h3>
                    <div style="display: flex; flex-wrap: wrap; gap: 10px;">
                        @foreach (System.Data.DataRow especie in ViewBag.Especies.Rows)
                        {
                            <span style="background: #3ac37d; color: white; padding: 5px 15px; border-radius: 20px; font-size: 14px;">@especie["Especie"]</span>
                        }
                    </div>
                </div>
            }
        </div>
        
        @if (ViewBag.Resenas != null && ViewBag.Resenas.Rows.Count > 0)
        {
            <div style="background: white; border-radius: 12px; padding: 30px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                <h2 style="color: #8B5E3C; margin-bottom: 20px;">Rese√±as</h2>
                <div style="display: flex; flex-direction: column; gap: 20px;">
                    @foreach (System.Data.DataRow resena in ViewBag.Resenas.Rows)
                    {
                        <div style="padding: 15px; background: #f9f9f9; border-radius: 8px;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                                <div>
                                    <strong>@resena["Nombre"] @resena["Apellido"]</strong>
                                    <span style="color: #999; font-size: 12px; margin-left: 10px;">@resena["Fecha"]</span>
                                </div>
                                <div>
                                    @for (int i = 0; i < Convert.ToInt32(resena["Calificacion"]); i++)
                                    {
                                        <span style="color: #FFD700;">‚≠ê</span>
                                    }
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(resena["Comentario"]?.ToString()))
                            {
                                <p style="color: #666; margin: 0;">@resena["Comentario"]</p>
                            }
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div style="background: white; border-radius: 12px; padding: 30px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center;">
                <p style="color: #999;">A√∫n no hay rese√±as para este proveedor.</p>
            </div>
        }
        
        <div style="margin-top: 30px; text-align: center;">
            <a href="/BuscarProveedor" style="display: inline-block; padding: 12px 24px; background-color: #6c757d; color: white; border-radius: 8px; text-decoration: none; font-weight: 600;">
                ‚Üê Volver a B√∫squeda
            </a>
        </div>
    }
    else
    {
        <div style="text-align: center; padding: 40px;">
            <p style="color: #999; font-size: 18px;">Proveedor no encontrado.</p>
            <a href="/BuscarProveedor" style="display: inline-block; margin-top: 20px; padding: 12px 24px; background-color: #6c757d; color: white; border-radius: 8px; text-decoration: none; font-weight: 600;">
                Volver a B√∫squeda
            </a>
        </div>
    }
</div>
</body>
</html>

<script>
async function iniciarChat(idProveedorUser) {
    try {
        const response = await fetch('/BuscarProveedor/ObtenerOCrearChat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(idProveedorUser)
        });
        
        const data = await response.json();
        if (data.success) {
            window.location.href = '/Home/Mensajes?chatId=' + data.chatId;
        } else {
            alert(data.message || 'Error al iniciar el chat');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error al iniciar el chat');
    }
}
</script>

