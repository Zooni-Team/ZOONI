@model Zooni.Models.Mascota
@{
    ViewData["Title"] = "Registro Mascota - Zooni";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --verde: #3ac37d;
            --verde-hover: #2ea968;
            --gris: #555;
            --gris-claro: #ccc;
            --fondo: #fff;
            --marron: #8B5E3C;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--fondo);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            position: relative;
            overflow: hidden;
        }

        .contenedor {
            text-align: center;
            background: #ffffffd9;
            border-radius: 25px;
            padding: 2.5rem;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.08);
            width: 90%;
            max-width: 440px;
            z-index: 2;
            backdrop-filter: blur(6px);
        }

        h1 {
            color: var(--marron);
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 1.3rem;
        }

        .formulario {
            display: flex;
            flex-direction: column;
            gap: 16px;
            align-items: center;
        }

        input, select {
            width: 100%;
            max-width: 320px;
            padding: 13px;
            border-radius: 20px;
            border: 1.8px solid var(--gris-claro);
            outline: none;
            font-size: 15px;
            text-align: center;
            transition: border 0.2s ease;
        }

        input:focus, select:focus {
            border-color: var(--verde);
        }

        .opciones {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            width: 100%;
            max-width: 320px;
            margin: 10px 0 18px;
        }

        .opciones input[type="radio"] { display: none; }

        .opciones label {
            background: #f8f8f8;
            border-radius: 20px;
            padding: 1rem 0.5rem;
            cursor: pointer;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .opciones label:hover {
            background: #e9fff0;
            transform: scale(1.03);
        }

        .opciones input[type="radio"]:checked + label {
            background: var(--verde);
            color: #fff;
            border: 2px solid var(--verde-hover);
            transform: scale(1.05);
        }

        .emoji {
            font-size: 1.9rem;
            margin-bottom: 0.3rem;
        }

        .btn-principal {
            background-color: var(--verde);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 12px 40px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: 0.3s ease;
            width: 100%;
            max-width: 320px;
            margin-top: 1rem;
        }

        .btn-principal:hover {
            background-color: var(--verde-hover);
            transform: translateY(-2px);
        }

        .imagen-bienvenida {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            z-index: 1;
        }

        .imagen-bienvenida img {
            width: 100%;
            max-width: 900px;
            object-fit: cover;
        }

        @@media (max-width: 768px) {
            h1 { font-size: 1.8rem; }
            .contenedor { padding: 1.5rem; }
            .btn-principal { font-size: 1rem; }
            .imagen-bienvenida img { max-width: 600px; }
        }

        @@media (max-width: 480px) {
            h1 { font-size: 1.5rem; }
            .emoji { font-size: 1.6rem; }
        }
    </style>
</head>
<body>
    <div class="contenedor">
        <h1>Contanos sobre tu mascota üêæ</h1>

        <form asp-action="Registro2" asp-controller="Registro" method="post" class="formulario">
            <input type="text" name="Nombre" placeholder="Nombre de tu mascota" required autocomplete="off" />

            <div class="opciones">
                <input type="radio" id="perro" name="Especie" value="Perro" required />
                <label for="perro"><span class="emoji">üê∂</span>Perro</label>

                <input type="radio" id="gato" name="Especie" value="Gato" />
                <label for="gato"><span class="emoji">üê±</span>Gato</label>

                <input type="radio" id="conejo" name="Especie" value="Conejo" />
                <label for="conejo"><span class="emoji">üê∞</span>Conejo</label>

                <input type="radio" id="ave" name="Especie" value="Ave" />
                <label for="ave"><span class="emoji">üê¶</span>Ave</label>

                <input type="radio" id="reptil" name="Especie" value="Reptil" />
                <label for="reptil"><span class="emoji">üê¢</span>Reptil</label>

                <input type="radio" id="pez" name="Especie" value="Pez" />
                <label for="pez"><span class="emoji">üêü</span>Pez</label>
            </div>

            <button type="submit" class="btn-principal">Continuar</button>
        </form>
    </div>

    <div class="imagen-bienvenida">
        <img src="~/img/mascotas-bienvenida.png" alt="Mascotas Bienvenida" />
    </div>
</body>
</html>
