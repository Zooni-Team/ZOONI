@model Zooni.Models.Mascota
@{
    ViewData["Title"] = "Registro - Mascota";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Zooni</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #fff;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            overflow: hidden;
        }

        .contenedor-registro2 {
            text-align: center;
            width: 90%;
            max-width: 420px;
            padding: 2rem;
            background: #ffffffd9;
            border-radius: 25px;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.08);
            z-index: 2;
            backdrop-filter: blur(5px);
        }

        h2 {
            font-size: 2rem;
            color: #2b2b2b;
            margin-bottom: 1.5rem;
        }

        .opciones-mascota {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .opciones-mascota input[type="radio"] {
            display: none;
        }

        .opciones-mascota label {
            background: #f8f8f8;
            border-radius: 20px;
            padding: 1rem 0.5rem;
            cursor: pointer;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .opciones-mascota label:hover {
            background: #e9fff0;
            transform: scale(1.03);
        }

        .opciones-mascota input[type="radio"]:checked + label {
            background: #3ac37d;
            color: #fff;
            border: 2px solid #2ea968;
            transform: scale(1.05);
        }

        .emoji {
            font-size: 2rem;
            display: block;
            margin-bottom: 0.3rem;
        }

        .btn-principal {
            background-color: #3ac37d;
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 12px 40px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: 0.3s ease;
        }

        .btn-principal:hover {
            background-color: #2ea968;
            transform: translateY(-2px);
        }

        .imagen-bienvenida {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            z-index: 1;
        }

        .imagen-bienvenida img {
            width: 100%;
            max-width: 900px;
            object-fit: cover;
        }

        /* RESPONSIVE */
        @@media (max-width: 768px) {
            h2 {
                font-size: 1.6rem;
            }

            .contenedor-registro2 {
                padding: 1.5rem;
            }

            .opciones-mascota {
                grid-template-columns: 1fr;
            }

            .btn-principal {
                width: 100%;
                font-size: 1rem;
            }

            .imagen-bienvenida img {
                max-width: 600px;
            }
        }

    @@media (max-width: 480px) {
            h2 {
                font-size: 1.4rem;
            }
            .emoji {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="contenedor-registro2">
        <h2>¬øQu√© Especie de mascota ten√©s?</h2>

        <form asp-action="Registro2" asp-controller="Registro" method="post">
            <div class="opciones-mascota">
                <input type="radio" id="perro" name="Especie" value="Perro" required />
                <label for="perro"><span class="emoji">üê∂</span>Perro</label>

                <input type="radio" id="gato" name="Especie" value="Gato" />
                <label for="gato"><span class="emoji">üê±</span>Gato</label>

                <input type="radio" id="conejo" name="Especie" value="Conejo" />
                <label for="conejo"><span class="emoji">üê∞</span>Conejo</label>

                <input type="radio" id="ave" name="Especie" value="Ave" />
                <label for="ave"><span class="emoji">üê¶</span>Ave</label>

                <input type="radio" id="reptil" name="Especie" value="Reptil" />
                <label for="reptil"><span class="emoji">üê¢</span>Reptil</label>

                <input type="radio" id="pez" name="Especie" value="Pez" />
                <label for="pez"><span class="emoji">üêü</span>Pez</label>
            </div>

            <input type="hidden" name="Nombre" value="MiMascota" />
            <input type="hidden" name="Edad" value="0" />

            <button type="submit" class="btn-principal">Continuar</button>
        </form>
    </div>

    <div class="imagen-bienvenida">
        <img src="~/images/mascotas-bienvenida.png" alt="Mascotas Bienvenida" />
    </div>
</body>
</html>
