@model Zooni.Models.Mascota
@{
    ViewData["Title"] = "Registro Mascota - Zooni";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --verde: #3ac37d;
            --verde-hover: #2ea968;
            --gris: #555;
            --gris-claro: #ccc;
            --marron: #8B5E3C;
            --fondo: #fff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--fondo);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
            text-rendering: optimizeLegibility;
        }

        .titulo-principal {
            text-align: center;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }

        .titulo-principal h1 {
            color: var(--marron);
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
        }

        .titulo-principal h2 {
            color: var(--gris);
            font-weight: 700;
            font-size: 1.15rem;
            margin: 0.3rem 0 1.5rem;
        }

        .contenedor {
            text-align: center;
            background: #fff;
            border-radius: 25px;
            padding: 2.2rem 2rem;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.08);
            width: 90%;
            max-width: 420px;
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 65vh;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeUp 0.8s ease forwards;
        }

        @@keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .titulo-con-flecha {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin: 0.5rem 0 1.3rem;
            width: 100%;
            flex-wrap: nowrap;
            white-space: nowrap;
        }

        .volver {
            background: none;
            border: none;
            padding: 0;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: transform 0.2s ease;
            flex-shrink: 0;
            font-weight: normal;
            text-decoration: none;
        }

        .volver:focus {
            outline: none;
        }

        .volver:focus-visible {
            outline: 2px solid var(--verde);
            outline-offset: 2px;
            border-radius: 4px;
        }

        .volver img {
            width: 26px;
            height: 26px;
            display: block;
            filter: brightness(0) saturate(100%) invert(30%) sepia(25%) saturate(1500%) hue-rotate(15deg) brightness(0.85);
            transition: transform 0.2s ease, filter 0.2s ease;
            font-weight: normal;
            font-style: normal;
        }

        .volver:hover {
            transform: scale(1.1);
        }

        .volver:hover img {
            filter: brightness(0) saturate(100%) invert(65%) sepia(90%) saturate(500%) hue-rotate(100deg) brightness(1);
        }

        .subtitulo {
            color: var(--marron);
            font-size: 1.45rem;
            font-weight: 700;
            line-height: 1.3;
            margin: 0;
            white-space: nowrap;
            flex-shrink: 1;
        }

        .formulario {
            display: flex;
            flex-direction: column;
            gap: 16px;
            align-items: center;
            width: 100%;
        }

        input {
            width: 100%;
            max-width: 320px;
            padding: 13px;
            border-radius: 5px;
            border: 1.8px solid var(--gris-claro);
            outline: none;
            font-size: 15px;
            text-align: center;
            transition: border 0.2s ease, box-shadow 0.2s ease;
            background: #fff;
        }

        input:focus {
            border-color: var(--verde);
            box-shadow: 0 0 0 2px rgba(58, 195, 125, 0.2);
        }

        .opciones {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            width: 100%;
            max-width: 320px;
            margin: 10px 0 18px;
        }

        .opciones input[type="radio"] {
            display: none;
        }

        .opciones label {
            background: #f8f8f8;
            border-radius: 20px;
            padding: 1rem 0.5rem;
            cursor: pointer;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            font-weight: 500;
        }

        .opciones label:hover {
            background: #e9fff0;
            transform: scale(1.03);
        }

        .opciones input[type="radio"]:checked + label {
            background: var(--verde);
            color: #fff;
            border: 2px solid var(--verde-hover);
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(58, 195, 125, 0.3);
        }

        .opciones input[type="radio"]:focus {
            outline: none;
        }

        .opciones input[type="radio"]:focus + label {
            outline: 2px solid var(--verde);
            outline-offset: 2px;
        }

        /* Prevenir que la flecha se vuelva negrita cuando se selecciona una mascota */
        .volver *,
        .volver *::before,
        .volver *::after {
            font-weight: normal !important;
            font-style: normal !important;
        }

        .emoji {
            font-size: 2rem;
            margin-bottom: 0.3rem;
        }

        .btn-principal {
            background-color: var(--verde);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 12px 40px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: transform 0.25s ease, background-color 0.25s ease;
            width: 100%;
            max-width: 320px;
            margin-top: 1rem;
            font-weight: 600;
        }

        .btn-principal:hover {
            background-color: var(--verde-hover);
            transform: translateY(-2px);
        }

        .imagen-bienvenida {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            z-index: 1;
            pointer-events: none;
        }

        .imagen-bienvenida img {
            width: 100%;
            max-width: 900px;
            object-fit: cover;
        }

        @@media (max-width: 768px) {
            .contenedor { padding: 1.6rem; max-width: 370px; }
            .subtitulo { font-size: 1.3rem; }
        }

        @@media (max-width: 480px) {
            .contenedor { padding: 1.2rem; max-width: 340px; }
            .subtitulo { font-size: 1.15rem; }
            input { font-size: 14px; }
            .volver { 
                width: 32px;
                height: 32px;
                flex-shrink: 0;
            }
            .volver img {
                width: 24px;
                height: 24px;
            }
            .titulo-con-flecha {
                gap: 8px;
                padding: 0 4px;
            }
        }
    </style>
</head>

<body>
    <div class="titulo-principal">
        <h1>Zooni</h1>
        <h2>隆Registrate!</h2>
    </div>

    <div class="contenedor">
        <div class="titulo-con-flecha">
            <button class="volver" onclick="volver()"><img src="~/img/icons/back-arrow-ios.svg" alt="Volver" /></button>
            <h3 class="subtitulo">Contanos sobre tu mascota </h3>
        </div>

        <form asp-action="Registro2" asp-controller="Registro" method="post" class="formulario">
            <input type="text" name="Nombre" placeholder="Nombre de tu mascota" required autocomplete="off" />

            <div class="opciones">
                <input type="radio" id="perro" name="Especie" value="Perro" required />
                <label for="perro"><span class="emoji"></span>Perro</label>

                <input type="radio" id="gato" name="Especie" value="Gato" />
                <label for="gato"><span class="emoji"></span>Gato</label>

                <input type="radio" id="conejo" name="Especie" value="Conejo" />
                <label for="conejo"><span class="emoji"></span>Conejo</label>

                <input type="radio" id="ave" name="Especie" value="Ave" />
                <label for="ave"><span class="emoji"></span>Ave</label>

                <input type="radio" id="reptil" name="Especie" value="Reptil" />
                <label for="reptil"><span class="emoji"></span>Reptil</label>

                <input type="radio" id="pez" name="Especie" value="Pez" />
                <label for="pez"><span class="emoji"></span>Pez</label>

                <input type="radio" id="hamster" name="Especie" value="Hamster" />
                <label for="hamster"><span class="emoji"></span>Hamster</label>

                <input type="radio" id="raton" name="Especie" value="Raton" />
                <label for="raton"><span class="emoji"></span>Rat贸n</label>
            </div>

            <button type="submit" class="btn-principal">Continuar</button>
        </form>
    </div>

    <div class="imagen-bienvenida">
        <img src="~/img/mascotas-bienvenida.png" alt="Mascotas Bienvenida" />
    </div>
<script>
function volver() {
  const origen = sessionStorage.getItem("OrigenRegistro") || "";
  if (origen === "configuracion") {
    window.location.href = "/Home/ConfigMascotas";
  } else {
    window.location.href = "/Auth/Login";
  }
}
</script>
<script>
  // Guarda origen si viene desde Configuraci贸n
  const params = new URLSearchParams(window.location.search);
  const origen = params.get("origen");
  if (origen) sessionStorage.setItem("OrigenRegistro", origen);
</script>


</body>
</html>

