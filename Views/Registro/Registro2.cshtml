@model Zooni.Models.Mascota
@{
    ViewData["Title"] = "Registro Mascota - Zooni";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --verde: #3ac37d;
            --verde-hover: #2ea968;
            --gris: #555;
            --gris-claro: #ccc;
            --marron: #8B5E3C;
            --fondo: #fff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--fondo);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
            text-rendering: optimizeLegibility;
        }

        .titulo-principal {
            text-align: center;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }

        .titulo-principal h1 {
            color: var(--marron);
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
        }

        .titulo-principal h2 {
            color: var(--gris);
            font-weight: 700;
            font-size: 1.15rem;
            margin: 0.3rem 0 1.5rem;
        }

        .contenedor {
            text-align: center;
            background: #fff;
            border-radius: 25px;
            padding: 2.2rem 2rem;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.08);
            width: 90%;
            max-width: 420px;
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 65vh;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeUp 0.8s ease forwards;
        }

        @@keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .volver {
            position: absolute;
            top: 16px;
            left: 16px;
            background: none;
            border: none;
            font-size: 26px;
            color: var(--marron);
            cursor: pointer;
            transition: transform 0.2s ease, color 0.2s ease;
            z-index: 5;
        }

        

        .subtitulo {
            color: var(--marron);
            font-size: 1.45rem;
            font-weight: 700;
            margin: 0.5rem 0 1.3rem;
            line-height: 1.3;
            text-align: center;
        }

        .formulario {
            display: flex;
            flex-direction: column;
            gap: 16px;
            align-items: center;
            width: 100%;
        }

        input {
            width: 100%;
            max-width: 320px;
            padding: 13px;
            border-radius: 20px;
            border: 1.8px solid var(--gris-claro);
            outline: none;
            font-size: 15px;
            text-align: center;
            transition: border 0.2s ease, box-shadow 0.2s ease;
            background: #fff;
        }

        input:focus {
            border-color: var(--verde);
            box-shadow: 0 0 0 2px rgba(58, 195, 125, 0.2);
        }

        .opciones {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            width: 100%;
            max-width: 320px;
            margin: 10px 0 18px;
        }

        .opciones input[type="radio"] {
            display: none;
        }

        .opciones label {
            background: #f8f8f8;
            border-radius: 20px;
            padding: 1rem 0.5rem;
            cursor: pointer;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            font-weight: 500;
        }

        .opciones label:hover {
            background: #e9fff0;
            transform: scale(1.03);
        }

        .opciones input[type="radio"]:checked + label {
            background: var(--verde);
            color: #fff;
            border: 2px solid var(--verde-hover);
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(58, 195, 125, 0.3);
        }

        .emoji {
            font-size: 2rem;
            margin-bottom: 0.3rem;
        }

        .btn-principal {
            background-color: var(--verde);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 12px 40px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: transform 0.25s ease, background-color 0.25s ease;
            width: 100%;
            max-width: 320px;
            margin-top: 1rem;
            font-weight: 600;
        }

        .btn-principal:hover {
            background-color: var(--verde-hover);
            transform: translateY(-2px);
        }

        .imagen-bienvenida {
            position: absolute;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            z-index: 1;
            pointer-events: none;
        }

        .imagen-bienvenida img {
            width: 100%;
            max-width: 900px;
            object-fit: cover;

        }

        @@media (max-width: 768px) {
            .contenedor {
                padding: 1.6rem;
                max-width: 370px;
            }

            .subtitulo {
                font-size: 1.3rem;
            }
        }

        @@media (max-width: 480px) {
            .contenedor {
                padding: 1.2rem;
                max-width: 340px;
            }

            .subtitulo {
                font-size: 1.2rem;
            }

            input {
                font-size: 14px;
            }

            .volver {
                top: 10px;
                left: 10px;
                font-size: 24px;
            }
        }
    </style>
</head>

<body>
    <div class="titulo-principal">
        <h1>Zooni</h1>
        <h2>¬°Registrate!</h2>
    </div>

    <div class="contenedor">
        <button class="volver" onclick="window.location.href='/auth/login'">‚Üê</button>

        <h3 class="subtitulo">Contanos sobre tu mascota üêæ</h3>

        <form asp-action="Registro2" asp-controller="Registro" method="post" class="formulario">
            <input type="text" name="Nombre" placeholder="Nombre de tu mascota" required autocomplete="off" />

            <div class="opciones">
                <input type="radio" id="perro" name="Especie" value="Perro" required />
                <label for="perro"><span class="emoji">üê∂</span>Perro</label>

                <input type="radio" id="gato" name="Especie" value="Gato" />
                <label for="gato"><span class="emoji">üê±</span>Gato</label>

                <input type="radio" id="conejo" name="Especie" value="Conejo" />
                <label for="conejo"><span class="emoji">üê∞</span>Conejo</label>

                <input type="radio" id="ave" name="Especie" value="Ave" />
                <label for="ave"><span class="emoji">üê¶</span>Ave</label>

                <input type="radio" id="reptil" name="Especie" value="Reptil" />
                <label for="reptil"><span class="emoji">üê¢</span>Reptil</label>

                <input type="radio" id="pez" name="Especie" value="Pez" />
                <label for="pez"><span class="emoji">üêü</span>Pez</label>
            </div>

            <button type="submit" class="btn-principal">Continuar</button>
        </form>
    </div>

    <div class="imagen-bienvenida">
        <img src="~/img/mascotas-bienvenida.png" alt="Mascotas Bienvenida" />
    </div>
</body>
</html>
