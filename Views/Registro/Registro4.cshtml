            max-width: 340px;
        }

        .mascota-img {
            width: 150px;
        }

        h1 {
            font-size: 1.7rem;
        }

        input {
            font-size: 14px;
        }

        .volver {
            top: 12px;
            left: 12px;
            font-size: 24px;
        }
    }
    .mascota-img
    {
        width: 68%;
    }
</style>

</head>
