<form asp-action="Registro4" asp-controller="Registro" method="post" onsubmit="return validarFormulario()">
    @Html.AntiForgeryToken()

    <div class="fila">
        <input type="text" name="nombre" placeholder="Nombre" required autocomplete="off" value="@(ViewBag.Nombre ?? "")" style="padding: 16px; font-size: 16px;" />
        <input type="text" name="apellido" placeholder="Apellido" required autocomplete="off" value="@(ViewBag.Apellido ?? "")" style="padding: 16px; font-size: 16px;" />
    </div>

    <input type="email" id="mail" name="mail" placeholder="Mail" required autocomplete="off" value="@(ViewBag.Mail ?? "")" onblur="verificarMail()" />
    <p id="errorMail" style="color:red; font-weight:600; display:none;">Este correo ya est√° registrado.</p>
    
    @if (TempData["Error"] != null)
    {
        <div id="mensajeError" style="background: #ffebee; color: #c62828; padding: 12px; border-radius: 10px; margin-top: 10px; font-weight: 600; text-align: center;">
            @TempData["Error"]
        </div>
    }
    @if (TempData["Exito"] != null)
    {
        <div style="background: #e8f5e9; color: #2e7d32; padding: 12px; border-radius: 10px; margin-top: 10px; font-weight: 600; text-align: center;">
            @TempData["Exito"]
        </div>
    }

    <input type="password" id="Contrasena" name="contrasena" placeholder="Contrase√±a" required autocomplete="off" />
    <input type="password" id="ConfirmarContrasena" name="confirmarContrasena" placeholder="Confirmar contrase√±a" required autocomplete="off" />

    <button type="submit" class="btn-principal">Continuar</button>
</form>

<script>
async function verificarMail() {
    const mail = document.getElementById("mail").value.trim();
    const error = document.getElementById("errorMail");
    if (!mail) return;

    const res = await fetch(`/Registro/VerificarMail?mail=${encodeURIComponent(mail)}`);
    const data = await res.json();

    if (data.existe) {
        error.style.display = "block";
        document.getElementById("mail").style.borderColor = "red";
    } else {
        error.style.display = "none";
        document.getElementById("mail").style.borderColor = "#ccc";
    }
}

function validarFormulario() {
    console.log("üîµ validarFormulario() llamado");
    
    const nombre = document.querySelector('input[name="nombre"]').value.trim();
    const apellido = document.querySelector('input[name="apellido"]').value.trim();
    const mail = document.getElementById("mail").value.trim();
    const pass = document.getElementById("Contrasena").value;
    const confirm = document.getElementById("ConfirmarContrasena").value;
    const error = document.getElementById("errorMail");

    console.log("üîµ Datos del formulario:", { nombre, apellido, mail, passLength: pass.length, confirmLength: confirm.length });

    if (!nombre || !apellido || !mail) {
        alert("Por favor complet√° todos los campos.");
        console.log("‚ùå Campos vac√≠os");
        return false;
    }

    if (error.style.display === "block") {
        alert("Ese correo ya est√° registrado. Por favor, us√° otro.");
        console.log("‚ùå Correo ya registrado");
        return false;
    }

    if (pass !== confirm) {
        alert("Las contrase√±as no coinciden. Intent√° nuevamente.");
        console.log("‚ùå Contrase√±as no coinciden");
        return false;
    }
    
    if (pass.length < 6) {
        alert("La contrase√±a debe tener al menos 6 caracteres.");
        console.log("‚ùå Contrase√±a muy corta");
        return false;
    }
    
    console.log("‚úÖ Validaci√≥n exitosa, enviando formulario");
    return true;
}
</script>

