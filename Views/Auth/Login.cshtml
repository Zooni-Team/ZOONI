    }

    function precargarImagenes() {
        imagenes.forEach(ruta => {
            const img = new Image();
            img.src = ruta;
        });
        console.log(`üñºÔ∏è Precargadas ${imagenes.length} im√°genes (${Object.keys(razasPorEspecie).length} especies).`);
    }

    if ("requestIdleCallback" in window) {
        requestIdleCallback(precargarImagenes);
    } else {
        setTimeout(precargarImagenes, 500);
    }
});
</script>

</body>
</html>
