@{
    ViewData["Title"] = "Dashboard Proveedor - Zooni";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --marron: #8B5E3C;
            --verde: #3ac37d;
            --gris: #555;
            --gris-claro: #ccc;
            --fondo: #FFFFFF;
            --gris-oscuro: #6c757d;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: var(--gris-oscuro);
            color: white;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h1 {
            margin: 0;
            font-size: 28px;
        }

        .btn-logout {
            background-color: rgba(255,255,255,0.2);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            font-weight: 600;
        }

        .btn-logout:hover {
            background-color: rgba(255,255,255,0.3);
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 0 20px;
        }

        .welcome-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .welcome-card h2 {
            color: var(--marron);
            margin: 0 0 10px 0;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .info-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .info-card h3 {
            color: var(--gris-oscuro);
            margin: 0 0 10px 0;
            font-size: 18px;
        }

        .info-card p {
            color: var(--gris);
            margin: 5px 0;
        }

        .btn-action {
            background-color: var(--gris-oscuro);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            font-weight: 600;
            margin-top: 15px;
        }

        .btn-action:hover {
            background-color: #5a6268;
        }

        .success {
            background-color: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="header-content">
            <h1>Zooni - Panel de Proveedor</h1>
            <a href="/Auth/Logout" class="btn-logout">Cerrar Sesión</a>
        </div>
    </header>

    <div class="container">
        @if (TempData["Exito"] != null)
        {
            <div class="success">@TempData["Exito"]</div>
        }

        <div class="welcome-card">
            <h2>¡Bienvenido, @(ViewBag.Proveedor?["NombreCompleto"] ?? "Proveedor")!</h2>
            <p>Gestioná tus servicios y reservas desde aquí.</p>
        </div>

        <div class="info-grid">
            <div class="info-card">
                <h3>Información del Perfil</h3>
                <p><strong>DNI:</strong> @(ViewBag.Proveedor?["DNI"] ?? "N/A")</p>
                <p><strong>Experiencia:</strong> @(ViewBag.Proveedor?["Experiencia_Anios"] ?? "0") años</p>
                <p><strong>Calificación:</strong> @(ViewBag.Proveedor?["Calificacion_Promedio"] ?? "0") ⭐</p>
                <a href="/Proveedor/Configuracion" class="btn-action">Configurar Perfil</a>
            </div>

            <div class="info-card">
                <h3>Servicios</h3>
                <p>Gestioná los servicios que ofreces</p>
                <a href="/Proveedor/Servicios" class="btn-action">Ver Servicios</a>
            </div>

            <div class="info-card">
                <h3>Reservas</h3>
                <p>Revisá y gestioná tus reservas</p>
                <a href="/Proveedor/Reservas" class="btn-action">Ver Reservas</a>
            </div>

            <div class="info-card">
                <h3>Reseñas</h3>
                <p>Revisá las reseñas de tus clientes</p>
                <a href="/Proveedor/Resenas" class="btn-action">Ver Reseñas</a>
            </div>
        </div>
    </div>
</body>
</html>

