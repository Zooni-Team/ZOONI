@{
    ViewData["Title"] = "Información Adicional - Zooni";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --verde: #3ac37d;
            --verde-hover: #2ea968;
            --gris: #555;
            --gris-claro: #ccc;
            --marron: #8B5E3C;
            --fondo: #fff;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--fondo);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
            text-rendering: optimizeLegibility;
        }

        .titulo-principal {
            text-align: center;
            margin-top: 2rem;
            margin-bottom: 1rem;
            width: 100%;
        }

        .titulo-principal h1 {
            color: var(--marron);
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
        }

        .titulo-principal h2 {
            color: var(--gris);
            font-weight: 700;
            font-size: 1.15rem;
            margin: 0.3rem 0 1.5rem;
        }

        .contenedor {
            text-align: center;
            background: #fff;
            border-radius: 25px;
            padding: 2.2rem 2rem 2.5rem;
            box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.08);
            width: 90%;
            max-width: 420px;
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeUp 0.8s ease forwards;
        }

        @@keyframes fadeUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .volver {
            position: absolute;
            top: 18px;
            left: 18px;
            background: none;
            border: none;
            font-size: 28px;
            color: var(--marron);
            cursor: pointer;
            transition: transform 0.2s ease, color 0.2s ease;
            z-index: 5;
            text-decoration: none;
            line-height: 1;
        }

        .volver:hover {
            transform: scale(1.1);
            color: var(--verde);
        }

        .formulario {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
            width: 100%;
        }

        .campo-grupo {
            width: 100%;
            max-width: 320px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .label-text {
            color: var(--gris);
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            text-align: left;
            width: 100%;
        }

        .optional {
            color: #999;
            font-size: 12px;
            font-weight: normal;
        }

        input {
            width: 100%;
            padding: 13px 16px;
            border-radius: 20px;
            border: 1.8px solid var(--gris-claro);
            outline: none;
            font-size: 15px;
            text-align: left;
            transition: border 0.2s ease, box-shadow 0.2s ease;
            background: #fff;
            font-family: 'Poppins', sans-serif;
        }

        input[type="tel"], input[type="number"] {
            text-align: center;
        }

        input:focus {
            border-color: var(--verde);
            box-shadow: 0 0 0 2px rgba(58, 195, 125, 0.2);
        }

        .btn-principal {
            background-color: var(--verde);
            color: #fff;
            border: none;
            border-radius: 25px;
            padding: 14px 40px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: transform 0.25s ease, background-color 0.25s ease;
            width: 100%;
            max-width: 320px;
            margin-top: 0.5rem;
            font-weight: 600;
        }

        .btn-principal:hover {
            background-color: var(--verde-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(58, 195, 125, 0.3);
        }

        .error {
            color: #d32f2f;
            font-weight: 600;
            padding: 12px 16px;
            background-color: #ffebee;
            border-radius: 12px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 320px;
            text-align: center;
            font-size: 14px;
        }

        .imagen-bienvenida {
            position: fixed;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: center;
            z-index: 1;
            pointer-events: none;
        }

        .imagen-bienvenida img {
            width: 100%;
            max-width: 900px;
            object-fit: cover;
        }

        /* Media Queries */
        @@media (max-width: 768px) {
            .contenedor {
                padding: 1.8rem 1.5rem;
                max-width: 380px;
            }

            .titulo-principal h1 {
                font-size: 2rem;
            }

            .titulo-principal h2 {
                font-size: 1.1rem;
            }

            .volver {
                top: 14px;
                left: 14px;
                font-size: 26px;
            }
        }

        @@media (max-width: 480px) {
            .contenedor {
                padding: 1.5rem 1.2rem;
                max-width: 340px;
                margin-bottom: 1.5rem;
            }

            .titulo-principal {
                margin-top: 1.5rem;
            }

            .titulo-principal h1 {
                font-size: 1.8rem;
            }

            .titulo-principal h2 {
                font-size: 1rem;
                margin: 0.2rem 0 1rem;
            }

            .volver {
                top: 12px;
                left: 12px;
                font-size: 24px;
            }

            .formulario {
                gap: 18px;
            }

            .campo-grupo {
                max-width: 100%;
            }

            input {
                font-size: 14px;
                padding: 12px 14px;
            }

            .btn-principal {
                padding: 12px 30px;
                font-size: 1rem;
            }

            .label-text {
                font-size: 13px;
            }
        }

        @@media (max-width: 360px) {
            .contenedor {
                padding: 1.3rem 1rem;
                max-width: 320px;
            }
        }
    </style>
</head>
<body>
    <div class="titulo-principal">
        <h1>Zooni</h1>
        <h2>Información Adicional</h2>
    </div>

    <div class="contenedor">
        <a href="/Proveedor/Registro2" class="volver">←</a>

        @if (TempData["Error"] != null)
        {
            <div class="error">@TempData["Error"]</div>
        }

        <form method="post" asp-action="Registro3" asp-controller="Proveedor" class="formulario">
            @Html.AntiForgeryToken()

            <div class="campo-grupo">
                <label class="label-text">Teléfono <span class="optional">(opcional)</span></label>
                <input type="tel" name="telefono" placeholder="+54 11 1234-5678" maxlength="30" />
            </div>

            <div class="campo-grupo">
                <label class="label-text">Dirección <span class="optional">(opcional)</span></label>
                <input type="text" name="direccion" placeholder="Calle y número" maxlength="200" />
            </div>

            <div class="campo-grupo">
                <label class="label-text">Ciudad <span class="optional">(opcional)</span></label>
                <input type="text" name="ciudad" placeholder="Buenos Aires" maxlength="100" />
            </div>

            <div class="campo-grupo">
                <label class="label-text">Provincia <span class="optional">(opcional)</span></label>
                <input type="text" name="provincia" placeholder="CABA" maxlength="100" />
            </div>

            <div class="campo-grupo">
                <label class="label-text">País <span class="optional">(opcional)</span></label>
                <input type="text" name="pais" placeholder="Argentina" maxlength="100" />
            </div>

            <div class="campo-grupo">
                <label class="label-text">Precio por Hora (ARS) <span class="optional">(opcional)</span></label>
                <input type="number" name="precioHora" placeholder="1500" step="0.01" min="0" />
            </div>

            <button type="submit" class="btn-principal">Completar Registro</button>
        </form>
    </div>

    <div class="imagen-bienvenida">
        <img src="~/img/mascotas-bienvenida.png" alt="Mascotas Bienvenida" />
    </div>
</body>
</html>
